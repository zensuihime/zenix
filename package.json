{
  "name": "@zensuihime/zenix",
  "version": "1.1.2",
  "author": "Zensui Hime",
  "main": "dist/lib/index.js",
  "module": "dist/lib/index.js",
  "types": "dist/lib/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/lib/index.js",
      "require": "./dist/lib/index.js",
      "types": "./dist/lib/index.d.ts"
    }
  },
  "dependencies": {
    "chalk": "^5.6.2",
    "commander": "^14.0.1",
    "exiftool-vendored": "^30.5.0",
    "ora": "^8.2.0",
    "sharp": "^0.34.3"
  },
  "bin": {
    "zenix": "./dist/cli.js"
  },
  "files": [
    "dist/",
    "src/",
    "README.md",
    "LICENSE"
  ],
  "description": "Zenix - Lightweight CLI tool and library for image processing",
  "keywords": [
    "image",
    "processing",
    "metadata",
    "resize",
    "watermark",
    "cli"
  ],
  "license": "MIT",
  "scripts": {
    "dev": "bun run src/cli.ts",
    "build": "bun run sync-version && bun run clean && bun run build:lib && bun run build:cli",
    "build:lib": "bun tsc --project tsconfig.lib.json",
    "build:cli": "bun build src/cli.ts --outfile dist/cli.js --target bun --minify",
    "sync-version": "bun run scripts/sync-version.ts",
    "start": "bun run dist/cli.js",
    "clean": "rimraf dist build",
    "test": "bun test --timeout 15000",
    "test:coverage": "bun test --coverage --timeout 15000",
    "typecheck": "bun tsc --noEmit",
    "typecheck:lib": "bun tsc --project tsconfig.lib.json --noEmit",
    "typecheck:cli": "bun tsc --project tsconfig.cli.json --noEmit",
    "lint": "biome check src/",
    "lint:fix": "biome check --write src/",
    "format": "biome format --write src/",
    "format:check": "biome format src/",
    "lint:check": "biome check src/",
    "prepublishOnly": "bun run build",
    "precommit": "bun run lint-staged && bun run typecheck"
  },
  "type": "module",
  "devDependencies": {
    "@biomejs/biome": "^2.2.4",
    "@types/bun": "^1.2.21",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.6",
    "pixelmatch": "^7.1.0",
    "rimraf": "^6.0.1",
    "typescript": "^5.9.2"
  },
  "lint-staged": {
    "src/**/*.{ts,js}": [
      "biome check --write",
      "biome format --write"
    ]
  }
}